<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MaiFileManager.Pages"
             x:Class="MaiFileManager.Pages.HomePage"
             x:Name="homePage"
             Title="HomePage">
    <Shell.TitleView>
        <HorizontalStackLayout>
            <Button x:Name="BackButton"
                    Text="&lt;"
                    FontSize="26"
                    Clicked="BackButton_Clicked"
                    HorizontalOptions="StartAndExpand"
                    IsVisible="false"/>
            <VerticalStackLayout>
                <Label BindingContext="{x:Reference homePage}"
                   Text="{Binding fileManager.DirName}"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="StartAndExpand"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="26"/>
                <Label BindingContext="{x:Reference homePage}"
                   Text="{Binding fileManager.CurrentDir}"
                   HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </Shell.TitleView>
    <VerticalStackLayout>
        <CollectionView x:Name="FileListView"
                        BindingContext="{x:Reference homePage}"
                        ItemsSource="{Binding FileList}"
                        SelectionChanged="FileListView_SelectionChanged"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               FontAttributes="Bold" /> 
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               Text="{Binding FullName}"
                               FontAttributes="Italic"
                               VerticalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>