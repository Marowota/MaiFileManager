<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MaiFileManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MaiFileManager.Pages">
    <TabBar>
        <ShellContent x:Name="Home"
                      Icon="sfolder.png"
                      Title="Files"
                      ContentTemplate="{DataTemplate pages:HomePage}"/>
        <ShellContent Icon="heart.png"
                      Title="Favourite"
                      ContentTemplate="{DataTemplate pages:Favourite}"/>
        <ShellContent Icon="download.png"
                      Title="Downloaded">
            <ShellContent.ContentTemplate>
                <DataTemplate>
                    <pages:HomePage>
                        <x:Arguments>
                            <x:Int32>1</x:Int32>
                        </x:Arguments>
                    </pages:HomePage>
                </DataTemplate>
            </ShellContent.ContentTemplate>
        </ShellContent>
        <ShellContent Icon="settings.png"
                      Title="Settings"
                      ContentTemplate="{DataTemplate pages:Setting}"/>
    </TabBar>
</Shell>
