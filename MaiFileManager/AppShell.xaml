<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MaiFileManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MaiFileManager.Pages">
    <TabBar>
        <ShellContent x:Name="Home"
                      Icon="folder.png"
                      Title="Files"
                      ContentTemplate="{DataTemplate pages:HomePage}"/>
        <ShellContent Icon="heart.png"
                      Title="Favourite"
                      ContentTemplate="{DataTemplate pages:Favourite}"/>
        <ShellContent Icon="download.png"
                      Title="Downloaded"
                      ContentTemplate="{DataTemplate pages:Downloaded}"/>

    </TabBar>
</Shell>
